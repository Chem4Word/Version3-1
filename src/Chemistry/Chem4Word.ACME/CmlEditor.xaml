<UserControl x:Class="Chem4Word.ACME.CmlEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Chem4Word.ACME"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid ShowGridLines="False" RenderTransformOrigin="0.502,0.685">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="35"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="cmlText" HorizontalAlignment="Stretch"
                 Margin="10,0,10,10"
                 TextWrapping="NoWrap"
                 AcceptsReturn="True"
                 HorizontalScrollBarVisibility="Auto"
                 VerticalScrollBarVisibility="Auto" FontFamily="Consolas" Grid.Row="0" />
        <Button x:Name="button" Content="OK" Height="26" Margin="0,0,10,0" VerticalAlignment="Top" RenderTransformOrigin="0.638,0.771" HorizontalAlignment="Right" Width="75" Click="button_Click" Grid.Row="1" />
    </Grid>
</UserControl>