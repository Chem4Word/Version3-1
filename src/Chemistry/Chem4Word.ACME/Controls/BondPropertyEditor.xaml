<UserControl
    x:Class="Chem4Word.ACME.Controls.BondPropertyEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chem4Word.ACME"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <Border Margin="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  FontSize="25">Bond Properties</TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,5,5,0" >Order</TextBlock>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="0,5,0,0" Text="{Binding Path=Order, Mode=TwoWay}"></TextBox>
            <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,5,5,0" >Stereo</TextBlock>
            <TextBox Grid.Row="2" Grid.Column="1" Margin="0,5,0,0" Text="{Binding Path=Stereo, Mode=TwoWay}"></TextBox>
            <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,5,5,0" >Placement</TextBlock>
            <TextBox Grid.Row="3" Grid.Column="1" Margin="0,5,0,0" Text="{Binding Path=Placement, Mode=TwoWay}"></TextBox>
            <Button  Grid.Row="4" Grid.Column="1" Margin="0,5,0,0" Width="50" Click="ButtonBase_OnClick" HorizontalAlignment="Right">Save</Button>
        </Grid>
    </Border>
</UserControl>
