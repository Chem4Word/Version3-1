<Window
    x:Class="Chem4Word.ACME.Controls.BondPropertyEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chem4Word.ACME.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Icon="/Chem4Word.ACME;component/Resources/ms-word-16.ico"
    Loaded="Dialog_OnLoaded"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="{x:Type RadioButton}">
            <Setter Property="Background" Value="Blue" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        <BulletDecorator Background="Transparent">
                            <BulletDecorator.Bullet>
                                <Grid Width="48" Height="48">
                                    <Ellipse
                                        x:Name="CheckMark"
                                        Width="Auto"
                                        Height="Auto"
                                        Margin="1"
                                        Fill="Green" />
                                    <Ellipse Fill="Aqua" Margin="5" />
                                    <ContentPresenter />
                                </Grid>
                            </BulletDecorator.Bullet>
                        </BulletDecorator>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="false">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border Margin="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                FontSize="25">
                Bond Properties
            </TextBlock>
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,5,5,0">
                Order
            </TextBlock>
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,5,0,0"
                Text="{Binding Path=Order, Mode=TwoWay}" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Margin="0,5,5,0">
                Stereo
            </TextBlock>
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Margin="0,5,0,0"
                Text="{Binding Path=Stereo, Mode=TwoWay}" />
            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                Margin="0,5,5,0">
                Placement
            </TextBlock>
            <TextBox
                Grid.Row="3"
                Grid.Column="1"
                Margin="0,5,0,0"
                Text="{Binding Path=Placement, Mode=TwoWay}" />
            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                Margin="0,5,5,0"
                VerticalAlignment="Center">
                Placement
            </TextBlock>
            <StackPanel
                Grid.Row="4"
                Grid.Column="1"
                Margin="0,5,0,0"
                Orientation="Horizontal">
                <RadioButton>
                    <Line X1="12" Y1="12" X2="36" Y2="36" Stroke="Red" StrokeThickness="2" 
                          StrokeEndLineCap="Round" StrokeStartLineCap="Round"></Line>
                </RadioButton>
                <RadioButton IsChecked="True">
                    <Line X1="12" Y1="12" X2="36" Y2="36" Stroke="Blue" StrokeThickness="2" 
                          StrokeEndLineCap="Round" StrokeStartLineCap="Round"></Line>
                </RadioButton>
                <RadioButton>
                    <Line X1="12" Y1="12" X2="36" Y2="36" Stroke="Green" StrokeThickness="2" 
                          StrokeEndLineCap="Round" StrokeStartLineCap="Round"></Line>
                </RadioButton>
                <RadioButton><TextBlock FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Center">A</TextBlock></RadioButton>
            </StackPanel>
            <Button
                Grid.Row="5"
                Grid.Column="1"
                Width="50"
                Margin="0,5,0,0"
                HorizontalAlignment="Right"
                Click="Save_OnClick">
                Save
            </Button>
        </Grid>
    </Border>
</Window>
