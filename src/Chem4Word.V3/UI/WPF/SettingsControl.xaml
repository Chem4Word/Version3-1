<UserControl
    x:Class="Chem4Word.UI.WPF.SettingsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chem4Word.UI.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    FontFamily="Tahoma"
    FontSize="18"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="45" />
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0" Margin="10,10,10,0">
            <TabItem Header="Plug Ins">
                <Grid>
                    <Label Content="Describe the tab" />
                </Grid>
            </TabItem>
            <TabItem Header="Web Services">
                <Grid>
                    <Label Content="Describe the tab" />
                </Grid>
            </TabItem>
            <TabItem Header="Privacy">
                <Grid>
                    <Label Content="Describe the tab" />
                </Grid>
            </TabItem>
            <TabItem Header="Library">
                <Grid>
                    <Label Content="Describe the tab" />
                </Grid>
            </TabItem>
            <TabItem Header="Maintenance">
                <Grid>
                    <Label Content="Describe the tab" />
                </Grid>
            </TabItem>
        </TabControl>
        <Button x:Name="OkButton"
            Grid.Row="1"
            Width="75"
            Height="26"
            Margin="0,10,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="OkButton_Click"
            Content="OK"
            RenderTransformOrigin="0.638,0.771" />
    </Grid>
</UserControl>
